# ============================================
# Sanandem (Public App) Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# ============================================
# DATABASE CONFIGURATION
# ============================================
# PostgreSQL connection string
# Format: postgres://username:password@host:port/database

# Local development example:
DATABASE_URL="postgres://sanandem_user:password@localhost:5432/sanandem"

# Supabase example (use connection pooler for serverless):
# DATABASE_URL="postgresql://postgres:[PASSWORD]@[PROJECT-REF].pooler.supabase.com:6543/postgres"

# Railway example:
# DATABASE_URL="postgresql://postgres:[PASSWORD]@[REGION].railway.app:[PORT]/railway"

# ============================================
# SECURITY
# ============================================
# Salt for IP address hashing (prevents storing raw IPs)
# Generate with: openssl rand -hex 32
# IMPORTANT: Use the SAME salt in both sanandem and sanadmin
IP_SALT="your-random-64-character-hex-string-here"

# Or generate with: node scripts/generate-secrets.js

# ============================================
# ENVIRONMENT
# ============================================
# Node environment: development, staging, production
NODE_ENV="development"

# Port for local development
PORT=5173

# ============================================
# OPTIONAL: RATE LIMITING
# ============================================
# Uncomment and configure for production
# RATE_LIMIT_ENABLED="true"
# RATE_LIMIT_REQUESTS=100
# RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds

# ============================================
# OPTIONAL: MONITORING & ERROR TRACKING
# ============================================
# Sentry DSN for error tracking (https://sentry.io)
# SENTRY_DSN="https://[key]@[org].ingest.sentry.io/[project]"

# LogRocket App ID (https://logrocket.com)
# LOGROCKET_APP_ID="your-app-id"

# ============================================
# OPTIONAL: ANALYTICS
# ============================================
# Google Analytics Measurement ID
# ANALYTICS_ID="G-XXXXXXXXXX"

# Plausible domain (https://plausible.io)
# PLAUSIBLE_DOMAIN="sanandem.com"

# ============================================
# OPTIONAL: EXTERNAL SERVICES
# ============================================
# API base URL (for production deployments)
# PUBLIC_API_URL="https://api.sanandem.com"

# CDN URL for static assets
# PUBLIC_CDN_URL="https://cdn.sanandem.com"

# ============================================
# DEVELOPMENT ONLY
# ============================================
# Enable debug logging in development
# DEBUG="true"

# Skip authentication in development (NOT for production!)
# DEV_SKIP_AUTH="false"
