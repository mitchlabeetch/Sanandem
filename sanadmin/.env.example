# ============================================
# Sanadmin (Admin Dashboard) Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# ============================================
# DATABASE CONFIGURATION
# ============================================
# PostgreSQL connection string (SAME as sanandem)
# Format: postgres://username:password@host:port/database

# Local development example:
DATABASE_URL="postgres://sanandem_user:password@localhost:5432/sanandem"

# Supabase example (use connection pooler for serverless):
# DATABASE_URL="postgresql://postgres:[PASSWORD]@[PROJECT-REF].pooler.supabase.com:6543/postgres"

# ============================================
# SECURITY
# ============================================
# Salt for IP address hashing
# IMPORTANT: Use the SAME IP_SALT as sanandem app
# Generate with: openssl rand -hex 32
IP_SALT="your-random-64-character-hex-string-here"

# Session secret for admin authentication
# Generate with: openssl rand -hex 32
# Should be DIFFERENT from IP_SALT
SESSION_SECRET="your-random-session-secret-here"

# Or generate both with: node scripts/generate-secrets.js

# ============================================
# AUTHENTICATION
# ============================================
# Session duration in seconds
# Default: 604800 (7 days)
SESSION_DURATION=604800

# Cookie settings
# SESSION_COOKIE_NAME="sanadmin_session"
# SESSION_COOKIE_SECURE="true"  # HTTPS only in production
# SESSION_COOKIE_HTTP_ONLY="true"
# SESSION_COOKIE_SAME_SITE="strict"

# ============================================
# ADMIN USER CREATION (Optional)
# ============================================
# Used for initial admin user creation
# Leave blank after first setup
# ADMIN_USERNAME="admin"
# ADMIN_PASSWORD_HASH="$argon2id$v=19$m=19456,t=2,p=1$..."
# Generate hash with: node scripts/generate-password-hash.js

# ============================================
# ENVIRONMENT
# ============================================
# Node environment: development, staging, production
NODE_ENV="development"

# Port for local development
PORT=5174

# ============================================
# OPTIONAL: CORS CONFIGURATION
# ============================================
# If sanadmin needs to call sanandem APIs
# CORS_ORIGIN="https://sanandem.com"
# CORS_CREDENTIALS="true"

# ============================================
# OPTIONAL: ACCESS CONTROL
# ============================================
# IP whitelist for admin access (comma-separated)
# Only enable in production if needed
# ADMIN_IP_WHITELIST="192.168.1.1,10.0.0.1"

# Disable public access (admin panel only accessible via direct link)
# DISABLE_PUBLIC_ACCESS="false"

# ============================================
# OPTIONAL: MONITORING & ERROR TRACKING
# ============================================
# Sentry DSN for error tracking (https://sentry.io)
# SENTRY_DSN="https://[key]@[org].ingest.sentry.io/[project]"

# LogRocket App ID (https://logrocket.com)
# LOGROCKET_APP_ID="your-app-id"

# ============================================
# OPTIONAL: AUDIT LOGGING
# ============================================
# Enable detailed audit logging
# AUDIT_LOG_ENABLED="true"

# Retain audit logs for X days
# AUDIT_LOG_RETENTION_DAYS=90

# ============================================
# OPTIONAL: NOTIFICATIONS
# ============================================
# Email service for notifications
# EMAIL_SERVICE="sendgrid"
# EMAIL_API_KEY="your-api-key"
# EMAIL_FROM="admin@sanandem.com"

# Slack webhook for alerts
# SLACK_WEBHOOK_URL="https://hooks.slack.com/services/..."

# ============================================
# DEVELOPMENT ONLY
# ============================================
# Enable debug logging in development
# DEBUG="true"

# Skip authentication in development (NOT for production!)
# DEV_SKIP_AUTH="false"

# Mock data for testing
# USE_MOCK_DATA="false"
